<? specials.map(function(k){ ?>

<a_left_sidehead>data.<?=k?></a_left_sidehead>
<? if (data[k] == undefined) { return } ?>

<para_1><?= Object.keys(data[k]).filter(function(kk){return ! kk.match(/^_/)}).join(", ") ?></para_1>

<?   
       var kk;
       for (kk in data[k]) { // company
